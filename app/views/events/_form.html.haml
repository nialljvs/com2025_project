= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :start
    = f.date_select :start
  .field
    = f.label :end
    = f.date_select :end
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :quote
    = f.text_field :quote
  .field
    = f.label :paid
    = f.check_box :paid
  .field
    = f.label :customer
    = f.text_field :customer
  .actions
    = f.submit 'Save'
