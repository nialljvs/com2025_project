= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")}" + t(".prohibited")
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :quote
    = f.text_field :quote
  .field
    = f.label :event
    %p= @task.event.name
    = f.hidden_field :event_id, value: @task.event_id
  .actions
    = f.submit t(".btnSave")
